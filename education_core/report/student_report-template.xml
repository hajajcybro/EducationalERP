<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_student_details">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <div class="page">
                    <h3 style="text-align:left; margin-bottom: 20px;">Student Report</h3>

                    <table class="table table-sm" style="width: 100%; border-collapse: collapse;" border="1">
                        <thead style="text-align:left;">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Class</th>
                                <th>Program</th>
                                <th>Academic Year</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="docs" t-as="student">
                                <tr>
                                    <td><t t-esc="student.get('student_name')"/></td>
                                    <td><t t-esc="student.get('email')"/></td>
                                    <td><t t-esc="student.get('class_name')"/></td>
                                    <td><t t-esc="student.get('program_name')"/></td>
                                    <td><t t-esc="student.get('academic_year')"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>

            </t>
        </t>
    </template>
</odoo>
