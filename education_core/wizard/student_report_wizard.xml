<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_student_wizard_report_form" model="ir.ui.view">
        <field name="name">student.report.wizard.form</field>
        <field name="model">student.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Student Report Wizard" class="oe_form_dialog">
                <sheet>
                    <group>
                        <field name="choice"/>
                    </group>
                    <group string="Filters">
                        <field name="academic_year_id" invisible="choice != 'academic_year'"/>
                        <field name="class_id" invisible="choice != 'class'"/>
                        <field name="student_ids" widget="many2many_tags" invisible="choice != 'student'"/>
                        <field name="program_id" invisible="choice != 'program'"/>
                    </group>

                    <footer>
                        <button name="action_generate_pdf"
                                type="object" string="PDF"
                                class="btn-primary"/>
                        <button name="action_generate_xl_report"
                                string="XLSX" type="object"
                                class="btn-primary"/>
                        <button special="cancel"
                                string="Cancel" class="btn-secondary"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_report_wizard" model="ir.actions.act_window">
    <field name="name">Student Report Wizard</field>
    <field name="res_model">student.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="view_student_wizard_report_form"/>
</record>

</odoo>
