<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Teacher View-->
  <record id="rule_teacher_own_record" model="ir.rule">
        <field name="name">Teacher: access own record only</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('education_core.group_education_teacher'))]"/>
    </record>


    <record id="rule_teacher_student_record" model="ir.rule">
        <field name="name">Student: Read All Teacher Records</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[( 1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('education_core.group_education_student'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
  </record>


</odoo>
