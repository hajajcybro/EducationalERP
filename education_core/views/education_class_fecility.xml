<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_education_class_facility_form" model="ir.ui.view">
        <field name="name">education.class.facility.form</field>
        <field name="model">education.class.facility</field>
        <field name="arch" type="xml">
            <form string="Classroom Facility">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_education_class_facility_list" model="ir.ui.view">
        <field name="name">education.class.facility.list</field>
        <field name="model">education.class.facility</field>
        <field name="arch" type="xml">
            <list string="Classroom Facilities">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_education_class_facility" model="ir.actions.act_window">
        <field name="name">Classroom Facilities</field>
        <field name="res_model">education.class.facility</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>