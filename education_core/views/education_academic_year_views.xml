<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="education_academic_year_view_form" model="ir.ui.view">
        <field name="name">education.academic.year.view.form</field>
        <field name="model">education.academic.year</field>
        <field name="arch" type="xml">
            <form string="Education_academic_year">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="name" class="oe_title "/>
                            </h1>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="is_current"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="education_academic_year_view_list" model="ir.ui.view">
        <field name="name">education.academic.year.view.list</field>
        <field name="model">education.academic.year</field>
        <field name="arch" type="xml">
            <list string="Education_academic_year">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="education_academic_year_action" model="ir.actions.act_window">
        <field name="name">Education academic year</field>
        <field name="res_model">education.academic.year</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first education academic year!
            </p>
        </field>
    </record>

</odoo>