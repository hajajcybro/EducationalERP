<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--  Form view  -->
    <record id="view_edu_student_form" model="ir.ui.view">
        <field name="name">edu.student.form</field>
        <field name="model">education.application</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_reject" string="Reject" class="oe_highlight" type="object"
                            invisible="state ==  'admission'" statusbar_visible="rejected"/>

                    <button name="action_to_review" string="To Review" class="oe_highlight" type="object"
                            invisible="state != 'application'"/>
                    <button name="action_verified" string="Verified" class="oe_highlight" type="object"
                            invisible="state != 'to_review'"/>

                     <button name="action_register" string="Admission" class="oe_highlight" type="object"
                            invisible="state != 'verified'"/>
                    <button name="action_enroll" string="Enroll" class="oe_highlight" type="object"
                            invisible="state != 'admission'"/>

                    <field name="state" widget="statusbar" class="oe_avatar"
                           statusbar_visible="application,to_review,verified,admission"/>
                </header>

                <sheet>

                     <field name="photo" widget="image" class="oe_avatar"
                           options="{'preview_image': 'photo'}"/>
                        <group>
                            <h1 class="oe_title" style="font-size:40px;">
                                <field name="reference_no"/>
                                <field name="admission_no"/>
                            </h1>
                        </group>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="program_id"/>
                            <field name="academic_year_id"/>
                            <field name="admission_date"/>
                            <field name="gender"/>
                            <field name="dob"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                            <field name="country_code"/>
                            <field name="zip"/>
                            <field name="category_id"/>
                        </group>
                    </group>
                        <notebook>
                            <page string="Note">
                                <field name="notes"/>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group string="Personal Info">
                                        <field name="id_no"/>
                                        <field name="blood_group"/>
                                        <field name="emergency_phone"/>
                                        <field name="guardian"/>
                                        <field name="relation"/>
                                    </group>
                                    <group string="Parents Info">
                                        <field name="father_name"/>
                                        <field name="mother_name"/>
                                        <field name="contact_no"/>
                                        <field name="contact_address"/>
                                    </group>
                                    <group string="Previous Academic Details">
                                        <field name="previous_academic"/>
                                        <field name="previous_class"/>
                                        <field name="Year_of_passing"/>
                                        <field name="language"/>
                                        <field name="board"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

      <!--  List View  -->
    <record id="view_edu_student_list" model="ir.ui.view">
        <field name="name">education.student.list</field>
        <field name="model">education.application</field>
        <field name="arch" type="xml">
            <list>
                <field name="admission_no"/>
                <field name="name"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!--    search view -->
    <record id="education_application_search_view" model="ir.ui.view">
        <field name="name">education.application.search</field>
        <field name="model">education.application</field>
        <field name="arch" type="xml">
            <search string="Search Applications">

                <!--   QUICK SEARCH FIELDS -->
                <field name="name"/>
                <field name="admission_no"/>
                <field name="program_id"/>
                <field name="state"/>
                <field name="academic_year_id"/>
                <separator/>

                <separator/>

                <!-- Filter by Missing Data -->
                <filter name="filter_archived"
                        string="Archived"
                        domain="[('active','=',False)]"/>
                <separator/>

                <!--      GROUP BY         -->
                <group name="group_by">

                    <filter name="group_by_program"
                            string="Program"
                            context="{'group_by':'program_id'}"/>

                    <filter name="group_by_gender"
                            string="Gender"
                            context="{'group_by':'gender'}"/>

                    <filter name="group_by_state"
                            string="state"
                            context="{'group_by':'state'}"/>

                    <filter name="group_by_academic_year"
                            string="Academic Year"
                            context="{'group_by':'academic_year_id'}"/>

                    <filter name="group_by_country"
                            string="Country"
                            context="{'group_by':'country_id'}"/>

                     <filter name="group_by_category"
                            string="Category"
                            context="{'group_by':'category_id'}"/>
                </group>

            </search>
        </field>
    </record>



     <!-- Window Action -->
    <record id="action_edu_student" model="ir.actions.act_window">
        <field name="name">Application</field>
        <field name="res_model">education.application</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_application_search_view"/>
    </record>

</odoo>
