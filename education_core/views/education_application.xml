<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--  Form view  -->
    <record id="view_edu_student_form" model="ir.ui.view">
        <field name="name">edu.student.form</field>
        <field name="model">education.application</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="action_register" string="Register" class="oe_highlight" type="object"
                            invisible="state !='draft'"/>
                    <button name="action_enroll" string="Enroll" class="oe_highlight" type="object"
                            invisible="state =='enrolled'"/>
                    <field name="state" widget="statusbar" class="oe_avatar"/>
                </header>

                <sheet>
                    <div name="button_box" position="inside">
                     <button
                        name="action_open_documents"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file"
                        string="Documents">
                        <field name="document_ids" widget="statinfo" string="Documents"/>
                    </button>

                </div>
                     <field name="photo" widget="image" class="oe_avatar"
                           options="{'preview_image': 'photo'}"/>
                        <group>
                            <h1 class="oe_title" style="font-size:40px;">
                                <field name="reference_no"/>
                                <field name="admission_no"/>
                            </h1>
                        </group>

                    <group>
                        <group string="">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                             <field name="program_id"/>
                            <field name="admission_date"/>
                            <field name="gender"/>
                            <field name="dob"/>
                            <field name="age"/>


                        </group>
                        <group string="Address">
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                            <field name="country_code"/>
                            <field name="zip"/>
                        </group>
                    </group>
                        <notebook>
                            <page string="Note">
                                <field name="notes"/>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="guardian"/>
                                        <field name="blood_group"/>
                                        <field name="category"/>

                                    </group>
                                    <group>
                                        <field name="current_enrollment_id"/>
                                        <field name="academic_year_id"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

      <!--  List View  -->
    <record id="view_edu_student_list" model="ir.ui.view">
        <field name="name">education.student.list</field>
        <field name="model">education.application</field>
        <field name="arch" type="xml">
            <list>
                <field name="admission_no"/>
                <field name="name"/>
                <field name="state"/>
            </list>
        </field>
    </record>

     <!-- Window Action -->
    <record id="action_edu_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">education.application</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
