<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Main Tree/List View -->
    <record id="view_education_core_timetable_list" model="ir.ui.view">
        <field name="name">education.core.timetable.list</field>
        <field name="model">education.timetable</field>
        <field name="arch" type="xml">
            <list string="Timetable Templates">
                <field name="name"/>
                <field name="class_id"/>
            </list>
        </field>
    </record>

    <!-- Main Form View -->
    <record id="view_education_core_timetable_form" model="ir.ui.view">
        <field name="name">education.core.timetable.form</field>
        <field name="model">education.timetable</field>
        <field name="arch" type="xml">
            <form string="Timetable Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="program_id"/>
                        </group>
                        <group>
                            <field name="session_id"/>
                             <field name="class_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="note"/>
                        </page>
                        <page string="line">
                            <field name="line_ids"/>
                        </page>
                    </notebook>
                 </sheet>
            </form>

        </field>
    </record>

    <!-- Action -->
    <record id="action_education_timetable" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="res_model">education.timetable</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first weekly timetable template
            </p>
        </field>
    </record>

</odoo>
