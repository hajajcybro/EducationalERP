<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    tree view-->
    <record id="view_education_class_tree" model="ir.ui.view">
        <field name="name">education.class.tree</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="academic_year_id"/>
                <field name="capacity"/>
                <field name="room_id"/>
            </list>
        </field>
    </record>

<!--    form view-->
    <record id="view_education_class_form" model="ir.ui.view">
        <field name="name">education.class.form</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="room_id"/>
                            <field name="capacity"/>
                            <field name="class_teacher_id"/>
                        </group>
                        <group>
                            <field name="program_id"/>
                            <field name="program_type"/>
                            <field name="division" invisible="program_type != 'school'"/>
                            <field name="session_id" invisible="program_type != 'college'"/>
                            <field name="academic_year_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                         <page string="Students Details">
                             <field name="student_ids"/>
                         </page>
                         <page string="Timetable">
                             <field name="timetable_line_ids"/>
                         </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

<!--    search view-->
    <record id="education_class_search_view" model="ir.ui.view">
        <field name="name">education.class.search</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <search string="Search Classes">

                <!-- Quick Search Fields -->
                <field name="name"/>
                <field name="program_id"/>
                <field name="academic_year_id"/>
                <field name="class_teacher_id"/>
                <separator/>

                 <group name="group_by">
                    <filter name="group_by_program"
                            string="Program"
                            context="{'group_by': 'program_id'}"/>

                    <filter name="group_by_academic_year"
                            string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>

                    <filter name="group_by_class_teacher"
                            string="Class Teacher"
                            context="{'group_by': 'class_teacher_id'}"/>
                </group>

            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">education.class</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_class_search_view"/>

    </record>
</odoo>
