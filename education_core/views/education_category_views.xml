<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_education_category_tree" model="ir.ui.view">
        <field name="name">education.category.tree</field>
        <field name="model">education.category</field>
        <field name="arch" type="xml">
            <list string="Student Categories">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_category_form" model="ir.ui.view">
        <field name="name">education.category.form</field>
        <field name="model">education.category</field>
        <field name="arch" type="xml">
            <form string="Student Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--    search view-->

    <record id="education_category_search_view" model="ir.ui.view">
        <field name="name">education.category.search</field>
        <field name="model">education.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <!-- Quick Search Fields -->
                <field name="name"/>
            </search>
        </field>
    </record>
    <!-- Action -->
    <record id="action_education_category" model="ir.actions.act_window">
        <field name="name">Student Categories</field>
        <field name="res_model">education.category</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_category_search_view"/>

    </record>

</odoo>
