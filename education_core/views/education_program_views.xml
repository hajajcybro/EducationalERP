<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_education_program_list" model="ir.ui.view">
        <field name="name">education.program.list</field>
        <field name="model">education.program</field>
        <field name="arch" type="xml">
            <list string="Education Programs" create="true" edit="true">
                <field name="name"/>
                <field name="code"/>
                <field name="duration"/>
                <field name="credit_hours"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_program_form" model="ir.ui.view">
        <field name="name">education.program.form</field>
        <field name="model">education.program</field>
        <field name="arch" type="xml">
            <form string="Education Program">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Program Name..."/>
                        </h1>
                    </div>

                    <group>
                        <group string="Program Details">
                            <field name="code"/>
                            <field name="duration"/>
                            <field name="program_type"/>
                            <field name="session_duration"/>
                            <field name="total_sessions"/>
                        </group>
                        <group string="Additional Information">
                            <field name="description" placeholder="Add a short description about this program..."/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Session">
                            <field name="session_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Course">
                            <field name="course_ids">
                                <list>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--    search view-->
      <record id="education_program_search_view" model="ir.ui.view">
        <field name="name">education.program.search</field>
        <field name="model">education.program</field>
        <field name="arch" type="xml">
            <search string="Search Programs">

                <!-- Quick Search Fields -->
                <field name="name"/>
                <field name="code"/>
                <field name="program_type"/>
                <field name="duration"/>

                <separator/>

                <!--      CUSTOM FILTERS   -->
                <filter name="filter_archived"
                        string="Archived"
                        domain="[('active','=',False)]"/>

                <separator/>

                <!--        GROUP BY       -->
                <group name="group_by">

                    <filter name="group_by_program_type"
                            string="Program Type"
                            context="{'group_by':'program_type'}"/>

                    <filter name="group_by_duration"
                            string="Duration"
                            context="{'group_by':'duration'}"/>
                    <filter name="group_by_session_duration"
                            string="Session Duration"
                            context="{'group_by':'session_duration'}"/>
                </group>

            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_program" model="ir.actions.act_window">
        <field name="name">Programs</field>
        <field name="res_model">education.program</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_program_search_view"/>

    </record>
</odoo>
