<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Scholarship Tree View -->
    <record id="view_education_scholarship_tree" model="ir.ui.view">
        <field name="name">education.scholarship.tree</field>
        <field name="model">education.scholarship</field>
        <field name="arch" type="xml">
            <list string="Scholarships">
                <field name="name"/>
                <field name="scholarship_type"/>
                <field name="amount"/>
                <field name="min_gpa"/>
                <field name="max_income"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Scholarship Form View -->
    <record id="view_education_scholarship_form" model="ir.ui.view">
        <field name="name">education.scholarship.form</field>
        <field name="model">education.scholarship</field>
        <field name="arch" type="xml">
            <form string="Scholarship">
                <header>
                        <field name="status" widget="statusbar" statusbar_visible="draft,open,awarded,expired"
                               statusbar_colors="{'draft':'grey','open':'blue','awarded':'green','expired':'red'}"/>

                        <button name="action_open" string="Open Applications" type="object"
                                invisible="status != 'draft'" class="oe_highlight"/>

                        <button name="action_award" string="Award Scholarship" type="object"
                                invisible="status != 'open'" class="btn-primary"/>

                        <button name="action_expire" string="Expire" type="object"
                                invisible="status != 'awarded'" class="btn-secondary"/>
                    </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Scholarship Name..."/></h1>
                    </div>

                    <group>
                        <group string="Details">
                            <field name="scholarship_type"/>
                            <field name="amount"/>
                            <field name="active"/>
                        </group>

                        <group string="Eligibility Requirements">
                            <field name="min_gpa"/>
                            <field name="max_income"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add details about the scholarship benefits, conditions, etc..."/>
                        </page>

                        <page string="Eligibility Criteria">
                            <field name="eligibility_ids" widget="many2many_tree"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Scholarship Action -->
    <record id="action_education_scholarship" model="ir.actions.act_window">
        <field name="name">Scholarships</field>
        <field name="res_model">education.scholarship</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
