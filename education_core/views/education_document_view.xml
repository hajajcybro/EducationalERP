<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_education_document_list" model="ir.ui.view">
        <field name="name">education.document.list</field>
        <field name="model">education.document</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="issue_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_document_form" model="ir.ui.view">
        <field name="name">education.document.form</field>
        <field name="model">education.document</field>
        <field name="arch" type="xml">
            <form string="Document">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar" alt="Avatar"/>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="admission_no"/>
                            <field name="attachment" filename="file_name" widget="binary"/>


                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="document_type"/>
                        </group>
                    </group>
                    <notebook sting='Description'>
                        <group>
                            <field name="notes"/>
                        </group>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

<!--    search view-->
    <record id="education_document_search_view" model="ir.ui.view">
        <field name="name">education.document.search.view</field>
        <field name="model">education.document</field>
        <field name="arch" type="xml">
            <search string="Search Student Documents">

                <!--   DEFAULT SEARCH      -->
                <field name="name"/>
                <field name="student_id"/>
                <field name="document_type"/>
                <field name="admission_no"/>

                <!--     CUSTOM FILTERS    -->
                <filter name="filter_no_attachment"
                        string="Without Attachment"
                        domain="[('attachment','=',False)]"/>

                <filter name="filter_certificate"
                        string="Certificate Only"
                        domain="[('document_type.name','=','certificate')]"/>

                <!--       GROUP BY           -->
                <group name="group_by">
                    <filter name="group_by_student"
                            string="Student"
                            context="{'group_by': 'student_id'}"/>

                    <filter name="group_by_doc_type"
                            string="Document Type"
                            context="{'group_by': 'document_type'}"/>

                    <filter name="group_by_issue"
                            string="Issue Date"
                            context="{'group_by': 'issue_date'}"/>

                    <filter name="group_by_name"
                            string="Student And Document"
                            context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>

        <!-- Action -->
    <record id="action_education_document" model="ir.actions.act_window">
        <field name="name">Student Document</field>
        <field name="res_model">education.document</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_document_search_view"/>
    </record>
</odoo>
