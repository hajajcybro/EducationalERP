<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_education_enrollment_tree" model="ir.ui.view">
        <field name="name">education.enrollment.list</field>
        <field name="model">education.enrollment</field>
        <field name="arch" type="xml">
            <list string="Enrollments">
                 <field name="student_id"/>
                 <field name="admission_no"/>
                 <field name="status" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_enrollment_form" model="ir.ui.view">
        <field name="name">education.enrollment.form</field>
        <field name="model">education.enrollment</field>
        <field name="arch" type="xml">
            <form string="Enrollment">
                <header>
                    <button name="action_enroll" string="Enroll" type="object"
                            class="oe_highlight"
                            invisible="status != 'draft'"/>
                    <button name="action_dropped" string="Dropped" class="oe_highlight" type="object"
                            invisible="status == 'dropped'" statusbar_visible="dropped"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,enrolled,completed"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <h1>
                                <field name="student_id" class="oe_title "/>
                            </h1>
                        </group>
                        <group>
                            <field name="student_image" widget="image" class="oe_avatar" nolabel="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                             <field name="admission_no"/>
                             <field name="email"/>
                             <field name="enrollment_date"/>
                        </group>
                        <group>
                            <field name="academic_year_id"/>
                            <field name="program_id"/>
                            <field name="current_class_id"/>
                            <field name="roll_number"/>
                            <field name="teacher_id"/>


                        </group>
                    </group>
                    <notebook>
                        <page string="Remarks">
                            <field name="remarks"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- search view-->
    <record id="education_enrollment_search_view" model="ir.ui.view">
        <field name="name">education.enrollment.search</field>
        <field name="model">education.enrollment</field>
        <field name="arch" type="xml">
        <search string="Search Enrollment">

                <!-- Quick Search Fields -->
                <field name="student_id"/>
                <field name="admission_no"/>
                <field name="program_id"/>
                <field name="current_class_id"/>
                <field name="status"/> <!-- â­ THIS is your state dropdown -->
                <field name="academic_year_id"/>

                <separator/>

                <!-- Group By -->
                <group name="group_by">

                    <filter name="group_by_status"
                            string="Status"
                            context="{'group_by':'status'}"/>

                    <filter name="group_by_class"
                            string="Class"
                            context="{'group_by':'current_class_id'}"/>

                    <filter name="group_by_program"
                            string="Program"
                            context="{'group_by':'program_id'}"/>

                    <filter name="group_by_year"
                            string="Academic Year"
                            context="{'group_by':'academic_year_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">education.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_enrollment_search_view"/>
    </record>

</odoo>

