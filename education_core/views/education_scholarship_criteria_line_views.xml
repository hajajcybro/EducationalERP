<odoo>
    <record id="view_education_scholarship_criteria_line_list" model="ir.ui.view">
        <field name="name">education.scholarship.criteria.line.list</field>
        <field name="model">education.scholarship.criteria.line</field>
        <field name="arch" type="xml">
            <list string="Scholarship Eligibility Criteria">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_education_scholarship_criteria_line_form" model="ir.ui.view">
        <field name="name">education.scholarship.criteria.line.form</field>
        <field name="model">education.scholarship.criteria.line</field>
        <field name="arch" type="xml">
            <form string="Scholarship Eligibility Criteria">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_scholarship_criteria_line" model="ir.actions.act_window">
        <field name="name">Eligibility Criteria</field>
        <field name="res_model">education.scholarship.criteria.line</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
