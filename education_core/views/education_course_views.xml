<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_education_course_tree" model="ir.ui.view">
        <field name="name">education.course.tree</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <list string="Courses" decoration-info="is_elective == True" decoration-muted="active == False">
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="duration"/>
                <field name="credit_hours"/>
                <field name="is_elective"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_course_form" model="ir.ui.view">
        <field name="name">education.course.form</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <form string="Education Course" show_metadata="false">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name" placeholder="Course Title..."/>
                        </h2>
                        <div class="text-muted">
                            <field name="code" class="oe_inline"/> â€”
                            <field name="program_id" class="oe_inline"/>
                        </div>
                    </div>

                    <group>
                        <group string="General Information">
                            <field name="is_elective"/>
                            <field name="duration"/>
                            <field name="credit_hours"/>
                        </group>
                        <group string="Associations">
                            <field name="program_id"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1" placeholder="Enter detailed course description..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!--    search view-->
     <record id="education_course_search_view" model="ir.ui.view">
        <field name="name">education.course.search</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <search string="Search Courses">

                <!-- Quick Search Fields -->
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="is_elective"/>

                <separator/>

                <!-- filter -->
                <filter name="filter_archived"
                        string="Archived"
                        domain="[('active','=',False)]"/>
                <separator/>

                <filter name="filter_elective"
                        string="Elective"
                        domain="[('is_elective','=',True)]"/>

                <separator/>

                <!-- group  -->
                <group name="group_by">

                    <filter name="group_by_program"
                            string="Program"
                            context="{'group_by':'program_id'}"/>

                    <filter name="group_by_elective"
                            string="Elective"
                            context="{'group_by':'is_elective'}"/>

                    <filter name="group_by_duration"
                            string="Duration"
                            context="{'group_by':'duration'}"/>
                </group>

            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">education.course</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
