<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (List) View -->
    <record id="view_education_timetable_line_ist" model="ir.ui.view">
        <field name="name">education.timetable.line.list</field>
        <field name="model">education.timetable.line</field>
        <field name="arch" type="xml">
            <list string="Timetable Lines">
                <field name="class_id"/>
                <field name="day"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="program_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_core_timetable_line_form" model="ir.ui.view">
        <field name="name">education.core.timetable.line.form</field>
        <field name="model">education.timetable.line</field>
        <field name="arch" type="xml">
            <form string="Timetable Line">
                <sheet>
                    <group>
                        <group>
                            <field name="class_id"/>
                            <field name="program_id"/>
                            <field name="subject_id" domain="[('program_id', '=', program_id)]"/>
                            <field name="faculty_id"/>
                        </group>
                        <group>
                            <field name="day"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="room_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_core_timetable_line" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="res_model">education.timetable.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': ['class_id']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first timetable line
            </p>
        </field>
    </record>

</odoo>
