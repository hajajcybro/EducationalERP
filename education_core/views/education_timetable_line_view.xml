<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (List) View -->
    <record id="view_education_timetable_line_ist" model="ir.ui.view">
        <field name="name">education.timetable.line.list</field>
        <field name="model">education.timetable.line</field>
        <field name="arch" type="xml">
            <list string="Timetable Lines">
                <field name="class_id"/>
                <field name="day"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="program_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_core_timetable_line_form" model="ir.ui.view">
        <field name="name">education.core.timetable.line.form</field>
        <field name="model">education.timetable.line</field>
        <field name="arch" type="xml">
            <form string="Timetable Line">
                <sheet>
                    <group>
                        <group>
                            <field name="class_id"/>
                            <field name="program_id"/>
                            <field name="subject_id" domain="[('program_id', '=', program_id)]"/>
                            <field name="faculty_id"/>
                        </group>
                        <group>
                            <field name="day"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="room_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="education_timetable_line_search_view" model="ir.ui.view">
        <field name="name">education.timetable.line.search</field>
        <field name="model">education.timetable.line</field>
        <field name="arch" type="xml">
            <search string="Search Timetable">

                <!-- Quick search fields -->
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="day"/>
                <field name="class_id"/>
                <field name="program_id"/>
                <separator/>

                <!-- Filter: Missing classroom -->
                <filter name="filter_room_assigned"
                        string="Without Specific Room"
                        domain="[('room_id','!=',False)]"/>

                <separator/>

                <!--        GROUP BY        -->
                <group name="group_by">

                    <filter name="group_by_day"
                            string="Day"
                            context="{'group_by':'day'}"/>

                    <filter name="group_by_subject"
                            string="Subject"
                            context="{'group_by':'subject_id'}"/>

                    <filter name="group_by_faculty"
                            string="Faculty"
                            context="{'group_by':'faculty_id'}"/>

                    <filter name="group_by_program"
                            string="Program"
                            context="{'group_by':'program_id'}"/>
                    <filter name="group_by_room"
                            string="Room"
                            context="{'group_by': 'room_id'}"/>
                </group>

            </search>
        </field>
    </record>



    <!-- Action -->
    <record id="action_education_core_timetable_line" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="res_model">education.timetable.line</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_timetable_line_search_view"/>
        <field name="context">{'group_by': ['class_id']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first timetable line
            </p>
        </field>
    </record>

</odoo>
