<odoo>
    <!-- Tree View -->
    <record id="view_education_class_room_tree" model="ir.ui.view">
        <field name="name">education.class.room.tree</field>
        <field name="model">education.class.room</field>
        <field name="arch" type="xml">
            <list string="Class Rooms">
                <field name="name"/>
                <field name="building"/>
                <field name="floor"/>
                <field name="capacity"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_class_room_form" model="ir.ui.view">
        <field name="name">education.class.room.form</field>
        <field name="model">education.class.room</field>
        <field name="arch" type="xml">
            <form string="Class Room">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="building"/>
                        </group>
                        <group>
                            <field name="floor"/>
                            <field name="capacity"/>
                            <field name="facility_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Note">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_education_class_room" model="ir.actions.act_window">
        <field name="name">Class Rooms</field>
        <field name="res_model">education.class.room</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

