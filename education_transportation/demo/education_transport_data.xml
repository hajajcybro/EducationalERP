<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define stops in the 'edu.stop' model -->
        <record id="edu_stop_albany" model="edu.stop">
            <field name="name">ALBANY</field>
        </record>
        <record id="edu_stop_allegany" model="edu.stop">
            <field name="name">ALLEGANY</field>
        </record>
        <record id="edu_stop_broome" model="edu.stop">
            <field name="name">BROOME</field>
        </record>
        <record id="edu_stop_cattaraugus" model="edu.stop">
            <field name="name">CATTARAUGUS</field>
        </record>
        <!-- Define stops in the 'education.stop' model -->
        <record id="education_stop1" model="education.stop">
            <field name="stop_name" ref="edu_stop_albany"/>
            <field name="stop_sequence">1</field>
            <field name="cost">100</field>
        </record>
        <record id="education_stop2" model="education.stop">
            <field name="stop_name" ref="edu_stop_allegany"/>
            <field name="stop_sequence">2</field>
            <field name="cost">150</field>
        </record>
        <record id="education_stop3" model="education.stop">
            <field name="stop_name" ref="edu_stop_broome"/>
            <field name="stop_sequence">3</field>
            <field name="cost">200</field>
        </record>
        <record id="education_stop4" model="education.stop">
            <field name="stop_name" ref="edu_stop_cattaraugus"/>
            <field name="stop_sequence">4</field>
            <field name="cost">250</field>
        </record>
        <!-- Define a trip -->
        <record id="education_trip1" model="education.trip">
            <field name="src_loc" ref="edu_stop_albany"/>
            <field name="dest_loc" ref="edu_stop_allegany"/>
            <field name="name">ALBANY-->ALLEGANY</field>
        </record>
        <!-- Define trip stops -->
        <record id="education_trip_stop1" model="education.trip_stop">
            <field name="stop_name" ref="edu_stop_albany"/>
            <field name="stop_sequence">1</field>
            <field name="cost">100</field>
            <field name="stop_trip_rel" ref="education_trip1"/>
            <field name="morning_timing">00.00</field>
            <field name="evening_timing">00.45</field>
        </record>
        <record id="education_trip_stop2" model="education.trip_stop">
            <field name="stop_name" ref="edu_stop_allegany"/>
            <field name="stop_sequence">2</field>
            <field name="cost">150</field>
            <field name="stop_trip_rel" ref="education_trip1"/>
            <field name="morning_timing">00.10</field>
            <field name="evening_timing">00.35</field>
        </record>
    </data>
</odoo>
