<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_education_scholarship_criteria_tree" model="ir.ui.view">
        <field name="name">education.scholarship.criteria.tree</field>
        <field name="model">education.scholarship.criteria</field>
        <field name="arch" type="xml">
            <list string="Scholarship Criteria">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_education_scholarship_criteria_form" model="ir.ui.view">
        <field name="name">education.scholarship.criteria.form</field>
        <field name="model">education.scholarship.criteria</field>
        <field name="arch" type="xml">
            <form string="Scholarship Criteria">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_scholarship_criteria" model="ir.actions.act_window">
        <field name="name">Scholarship Criteria</field>
        <field name="res_model">education.scholarship.criteria</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>
