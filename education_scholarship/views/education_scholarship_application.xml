<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_education_scholarship_application_tree" model="ir.ui.view">
        <field name="name">education.scholarship.application.tree</field>
        <field name="model">education.scholarship.application</field>
        <field name="arch" type="xml">
            <list string="Scholarship Applications">
                <field name="student_id"/>
                <field name="scholarship_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_education_scholarship_application_form" model="ir.ui.view">
        <field name="name">education.scholarship.application.form</field>
        <field name="model">education.scholarship.application</field>
        <field name="arch" type="xml">
            <form string="Scholarship Application">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,under_review,approved,"/>
                    <button name="action_submit" string="Submit" type="object"
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_review" string="Review" type="object"
                            invisible="state != 'submitted'" class="btn-primary"/>
                    <button name="action_check" string="Validating"  class="btn-primary"
                            invisible="state != 'under_review'" type="object"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state == 'cancel'" class="btn-primary"
                            statusbar_visible="cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_exam_result" type="object" class="oe_stat_button"
                                icon="fa-graduation-cap">
                            <field name="exam_result_id" string="Score"/>
                        </button>
                        <button name="action_open_documents" type="object"
                            class="oe_stat_button" icon="fa-folder-open">
                            <field name="document_count" string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <group string="Academic Info">
                            <field name="scholarship_id"/>
                            <field name="student_id"/>
                            <field name="admission_no"/>
                            <field name="program_id"/>
                            <field name="semester"/>
                            <field name="academic_year_id"/>
                            <field name="application_date"/>
                            <field name="category_id"/>
                            <field name="contact_email"/>
                            <field name="contact_phone"/>
                        </group>
                        <group string="Account Info">
                            <field name="bank_name"/>
                            <field name="bank_branch"/>
                            <field name="account_holder_name"/>
                            <field name="bank_account_number"/>
                            <field name="account_type"/>
                            <field name="ifsc_code"/>
                            <field name="swift_code"/>
                            <field name="bank_address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_scholarship_application" model="ir.actions.act_window">
        <field name="name">Scholarship Applications</field>
        <field name="res_model">education.scholarship.application</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
