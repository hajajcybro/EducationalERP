<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_invoice_summary">
        <t t-call="web.html_container">
                <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align:left;">Invoice Report</h3>
                     <table class="table table-sm table-bordered mt16">
                        <thead>
                            <tr class="text-center">
                                <th>Student</th>
                                <th>Admission No</th>
                                <th>Invoice No</th>
                                <th>Invoice Type</th>
                                <th>Invoice Date</th>
                                <th>Due Date</th>
                                <th>Total</th>
                                <th>Residual</th>
                                <th>Payment State</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="docs" t-as="row">
                                <tr class="text-center">
                                    <td>
                                        <t t-esc="row.get('student_name')"/>
                                    </td>
                                    <td>
                                        <t t-esc="row.get('admission_no')"/>
                                    </td>
                                    <td>
                                        <t t-esc="row.get('invoice_number')"/>
                                    </td>
                                    <td>
                                        <t t-esc="row.get('move_type')"/>
                                    </td>
                                    <td>
                                        <t t-esc="row.get('invoice_date') or '-'"/>
                                    </td>
                                    <td>
                                        <t t-esc="row.get('invoice_date_due') or '-'"/>
                                    </td>
                                    <td class="text-end">
                                        <t t-esc="row.get('amount_total')"/>
                                    </td>
                                    <td class="text-end">
                                        <t t-esc="row.get('amount_residual')"/>
                                    </td>
                                    <td>
                                        <t t-esc="row.get('payment_state')"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>
                </t>
            </t>

    </template>
</odoo>

