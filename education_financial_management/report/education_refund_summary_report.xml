<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_refund_summary">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">

                    <h3 class="mb-3">Refund Summary Report</h3>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Admission No</th>
                                <th>Invoice</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th>Requested Amount</th>
                                <th>Reason</th>
                                <th>Rejection Reason</th>
                                <th>Credit Note</th>
                                <th>Credit Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="r">
                                <tr>
                                    <td class="text-center"><t t-esc="r[1]"/></td>
                                    <td><t t-esc="r[2]"/></td>
                                    <td><t t-esc="r[3] or '-'"/></td>
                                    <td><t t-esc="r[4]"/></td>
                                    <td><t t-esc="r[5].replace('_',' ').title()"/></td>
                                    <td><t t-esc="r[6]"/></td>
                                    <td><t t-esc="r[7] or '-'"/></td>
                                    <td><t t-esc="r[8] or '-'"/></td>
                                    <td><t t-esc="r[9] or '-'"/></td>
                                    <td><t t-esc="r[10] or 0.0"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>
