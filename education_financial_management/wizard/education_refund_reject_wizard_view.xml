<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_education_refund_reject_wizard_form"
            model="ir.ui.view">
        <field name="name">education.refund.reject.wizard.form</field>
        <field name="model">education.refund.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Refund Request">
                <sheet>
                    <group>
                        <field name="refund_request_id"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Submit"
                            name="action_submit"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
