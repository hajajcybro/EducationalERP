<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_refund_summary_wizard_form" model="ir.ui.view">
        <field name="name">refund.summary.wizard.form</field>
        <field name="model">refund.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Refund Summary Report">
                <group>

                    <group>
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="refund_state"/>
                    </group>
                    <group>
                        <field name="date_filter"/>
                        <field name="from_date"
                               invisible = "date_filter != 'custom'"/>
                        <field name="to_date"
                                invisible = "date_filter != 'custom'"/>
                    </group>
                </group>

                <footer>
                    <button name="action_generate_refund_pdf_report"
                            string="PDF"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_generate_refund_xlsx_report"
                            string="XlSX"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_refund_summary_wizard" model="ir.actions.act_window">
        <field name="name">Refund Summary</field>
        <field name="res_model">refund.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
