<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_student_fee_summary_wizard_form" model="ir.ui.view">
        <field name="name">fee.summary.wizard.form</field>
        <field name="model">fee.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Student Fee Summary Report">
                <group>
                    <group>
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="payment_type"/>
                    </group>

                    <group>
                        <field name="date_filter"/>
                        <field name="from_date"
                               invisible="date_filter != 'custom'"/>
                        <field name="to_date"
                               invisible="date_filter != 'custom'"/>
                    </group>
                </group>

                <group>
                    <field name="is_refund"/>
                </group>

                <footer>
                     <button name="action_generate_pdf_report"
                            string="PDF" type="object" class="btn-primary"/>
                    <button name="action_generate_xlsx_report"
                            string="XLSX" type="object" class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_student_fee_summary_wizard" model="ir.actions.act_window">
        <field name="name">Fee Summary</field>
        <field name="res_model">fee.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
