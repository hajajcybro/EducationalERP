<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_edu_fee_plan_form" model="ir.ui.view">
        <field name="name">education.fee.plan.form</field>
        <field name="model">education.fee.plan</field>
        <field name="arch" type="xml">
            <form string="Fee Plan">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="program_id"/>
                            <field name="academic_year_id"/>
                        </group>
                        <group>
                           <field name="currency_id"/>
                            <field name="amount"/>
                            <field name="penalty_rule_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_fee_plan_tree" model="ir.ui.view">
        <field name="name">education.fee.plan.tree</field>
        <field name="model">education.fee.plan</field>
        <field name="arch" type="xml">
            <list string="Fee Plans" default_order="academic_year_id desc">
                <field name="name"/>
                <field name="program_id"/>
                <field name="academic_year_id"/>
                <field name="currency_id"/>
            </list>
        </field>
    </record>

