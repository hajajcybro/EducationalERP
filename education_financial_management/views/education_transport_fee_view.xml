<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_education_transport_fee_form" model="ir.ui.view">
        <field name="name">education.transport.fee.form</field>
        <field name="model">education.transport.fee</field>
        <field name="arch" type="xml">
            <form string="Transport Fee">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="route_id" required="1"/>
                            <field name="stop_ids" widget="many2many_tags"
                                   domain="[('route_id', '=', route_id)]"/>
                        </group>
                        <group>
                            <field name="amount" required="1"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <cahtter/>
            </form>
        </field>
    </record>

    <record id="view_education_transport_fee_tree" model="ir.ui.view">
        <field name="name">education.transport.fee.tree</field>
        <field name="model">education.transport.fee</field>
        <field name="arch" type="xml">
            <list string="Transport Fees">
                <field name="route_id"/>
                <field name="stop_ids"/>
                <field name="amount"/>
                <field name="currency_id"/>
            </list>
        </field>
    </record>

    <record id="action_education_transport_fee" model="ir.actions.act_window">
        <field name="name">Transport Fees</field>
        <field name="res_model">education.transport.fee</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>