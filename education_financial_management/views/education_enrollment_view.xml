<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="education_application_form_inherit_" model="ir.ui.view">
        <field name="name">education.application.form.inherit</field>
        <field name="model">education.enrollment</field>
        <field name="inherit_id"
               ref="education_core.view_education_enrollment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div name="button_box" position="inside" invisible="id != True">
                    <button name="action_view_fee_invoices"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-file-text-o" string="Fee Invoices">
                    </button>
                </div>
            </xpath>

        </field>
    </record>

</odoo>