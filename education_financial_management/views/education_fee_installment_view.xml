<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_edu_fee_installment_tree" model="ir.ui.view">
        <field name="name">education.fee.installment.tree</field>
        <field name="model">education.fee.installment</field>
        <field name="arch" type="xml">
            <list string="Fee Installments">
                <field name="name"/>
                <field name="fee_plan_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
<!--                <field name="penalty_rule_id"/>-->
            </list>
        </field>
    </record>

    <record id="view_edu_fee_installment_form" model="ir.ui.view">
        <field name="name">education.fee.installment.form</field>
        <field name="model">education.fee.installment</field>
        <field name="arch" type="xml">
            <form string="Fee Installment">
                <sheet>

                    <group>
                        <group>
                            <field name="fee_plan_id"/>
                            <field name="name"/>
                            <field name="currency_id" readonly="1"/>

                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="duration"/>
                            <field name="installment_amount"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_edu_fee_installment" model="ir.actions.act_window">
        <field name="name">Fee Installment</field>
        <field name="res_model">education.fee.installment</field>
        <field name="view_mode">list,form</field>
    </record>



   </odoo>