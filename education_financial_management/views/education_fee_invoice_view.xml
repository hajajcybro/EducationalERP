<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_edu_fee_invoice_form" model="ir.ui.view">
        <field name="name">education.fee.invoice.form</field>
        <field name="model">education.fee.invoice</field>
        <field name="arch" type="xml">
            <form string="Fee Invoice">
                <header>
                    <button class="oe-highlight" type="object" string="Create Invoice"
                             name="action_create_invoice" invisible="hide_invoice_button != False"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="admission_no"/>
                            <field name="enrollment_id"/>
                        </group>
                        <group>
                            <field name="payment_type"/>
                            <field name="fee_plan_id" invisible="payment_type != 'full'"/>
                            <field name="installment_id" invisible="payment_type != 'installment'"/>
                            <field name="transport_plan_id" invisible="payment_type != 'transport'"/>
                            <field name="route_id" invisible="payment_type != 'transport'"/>
                            <field name="stop_id" invisible="payment_type != 'transport'"/>

                            <field name="payment_term_id"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="total_invoiced_amount" invisible="payment_type != 'installment'"/>
                        <field name="remaining_amount" invisible="payment_type != 'installment'"/>
                    </group>
                    <notebook>
                        <page string="Remarks">
                            <field name="remarks"/>
                        </page>
                        <page  string="Invoice line">
                            <field name="invoice_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_fee_invoice_tree" model="ir.ui.view">
        <field name="name">education.fee.invoice.tree</field>
        <field name="model">education.fee.invoice</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="payment_type"/>
                <field name="fee_plan_id"/>
                <field name="installment_id"/>
                <field name="transport_plan_id"/>
                <field name="total_invoiced_amount"/>
                <field name="outstanding_amount"/>
                <field name="amount_paid"/>
                <field name="reverse_amount"/>
                <field name="payment_state"/>
            </list>
        </field>
    </record>

    <record id="view_education_fee_invoice_search" model="ir.ui.view">
        <field name="name">education.fee.invoice.search</field>
        <field name="model">education.fee.invoice</field>
        <field name="arch" type="xml">
            <search string="Fee Invoices">

            <filter string="Full Payment"
                        name="filter_full_payment"
                        domain="[('payment_type', '=', 'full')]"/>

            <filter string="Installment"
                    name="filter_installment"
                    domain="[('payment_type', '=', 'installment')]"/>

            <separator/>
                <!-- Search Fields -->
                <field name="student_id"/>
                <field name="fee_plan_id"/>
                <field name="installment_id"/>
                <field name="payment_type"/>
                <separator/>

                <!-- Group By -->
                <group name="group_by">
                    <filter string="Student" name="group_by_student"
                            context="{'group_by':'student_id'}"/>
                    <filter string="Fee Plan" name="group_by_fee"
                            context="{'group_by':'fee_plan_id'}"/>
                    <filter string="Payment Type" name="group_by_payment"
                            context="{'group_by':'payment_type'}"/>
                    <filter string="Status" name="group_by_status"
                            context="{'group_by':'status'}"/>
                </group>


            </search>
        </field>
    </record>


    <record id="action_education_fee_invoice" model="ir.actions.act_window">
        <field name="name">Fee Invoices</field>
        <field name="res_model">education.fee.invoice</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
