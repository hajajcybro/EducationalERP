<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_edu_fee_invoice_form" model="ir.ui.view">
        <field name="name">education.fee.invoice.form</field>
        <field name="model">education.fee.invoice</field>
        <field name="arch" type="xml">
            <form string="Fee Invoice">
                <header>
                    <button class="oe-highlight" type="object" string="Create Invoice"
                             name="action_create_invoice" invisible="hide_invoice_button != False"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="admission_no"/>
                            <field name="enrollment_id"/>
                        </group>
                        <group>
                            <field name="payment_type"/>
                            <field name="fee_plan_id" invisible="payment_type != 'full'"/>
                            <field name="installment_id" invisible="payment_type != 'installment'"/>
                            <field name="payment_term_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="total_invoiced_amount" invisible="payment_type != 'installment'"/>
                        <field name="remaining_amount" invisible="payment_type != 'installment'"/>

                    </group>
                    <notebook>
                        <page string="Remarks">
                            <field name="remarks"/>
                        </page>
                        <page  string="Invoice">
                            <field name="invoice_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_fee_invoice_tree" model="ir.ui.view">
        <field name="name">education.fee.invoice.tree</field>
        <field name="model">education.fee.invoice</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="payment_type"/>
                <field name="fee_plan_id"/>
                <field name="installment_id"/>
                <field name="amount_total"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="action_education_fee_invoice" model="ir.actions.act_window">
        <field name="name">Fee Invoices</field>
        <field name="res_model">education.fee.invoice</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
