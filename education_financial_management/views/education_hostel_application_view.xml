<?xml version="1.0" encoding="UTF-8" ?>
    <odoo>
        <record id="view_hostel_application_form_inherit" model="ir.ui.view">
            <field name="name">education.hostel.application.form.inherit</field>
            <field name="model">education.hostel.application</field>
            <field name="inherit_id" ref="education_hostel.view_hostel_application_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button
                        name="action_view_invoices"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file-text-o">
                    </button>
                </xpath>
            </field>
        </record>

        <record id="action_hostel_application_invoices" model="ir.actions.act_window">
            <field name="name">Hostel</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,form</field>
        </record>
    </odoo>

