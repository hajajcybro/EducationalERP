<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_education_library_member_tree_inherit_custom" model="ir.ui.view">
        <field name="name">education.library.member.tree.inherit.custom</field>
        <field name="model">education.library.member</field>
        <field name="inherit_id" ref="education_library.view_education_library_member_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="membership_date"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">badge</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_education_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">education.library.member</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="education_library.view_education_library_member_tree"/>
    </record>

</odoo>
