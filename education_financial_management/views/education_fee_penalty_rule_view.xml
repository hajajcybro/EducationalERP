<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_education_fee_penalty_rule_form" model="ir.ui.view">
        <field name="name">education.fee.penalty.rule.form</field>
        <field name="model">education.fee.penalty.rule</field>
        <field name="arch" type="xml">
            <form string="Fee Penalty Rule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="penalty_type"/>
                        <field name="value"/>
                        <field name="grace_period"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_education_fee_penalty_rule_list" model="ir.ui.view">
        <field name="name">education.fee.penalty.rule.tree</field>
        <field name="model">education.fee.penalty.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="penalty_type"/>
                <field name="value"/>
                <field name="grace_period"/>
            </list>
        </field>
    </record>

     <record id="action_education_fee_penalty_rule" model="ir.actions.act_window">
        <field name="name">Fee Penalty Rules</field>
        <field name="res_model">education.fee.penalty.rule</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>






