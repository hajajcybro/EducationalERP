<odoo>

    <!-- Tree View -->
    <record id="education_hostel_room_list_view" model="ir.ui.view">
        <field name="name">education.hostel.room.list</field>
        <field name="model">education.hostel.room</field>
        <field name="arch" type="xml">
            <list>
                <field name="room_no"/>
                <field name="hostel_id"/>
                <field name="floor_id"/>
                <field name="capacity"/>
                <field name="gender"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="education_hostel_room_form_view" model="ir.ui.view">
        <field name="name">education.hostel.room.form</field>
        <field name="model">education.hostel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="room_no"/>
                            <field name="hostel_id"/>
                          <field name="floor_id" domain="[('hostel_id', '=', hostel_id)]"/>

                        </group>
                        <group>
                            <field name="capacity"/>
                            <field name="gender"/>
                            <field name="status"/>
                            <field name="allocated_no"/>
                            <field name="vacancy"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_hostel_room" model="ir.actions.act_window">
        <field name="name">Hostel Rooms</field>
        <field name="res_model">education.hostel.room</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
  <menuitem id="menu_hostel_configuration"
              name="Configuration"
              parent="menu_hostel_root"
              sequence="30"/>
    <menuitem id="menu_education_hostel_room"
              name="Rooms"
              parent="menu_hostel_configuration"
              action="action_education_hostel_room"
              sequence="20"
    />
</odoo>
