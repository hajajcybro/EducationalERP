<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="education_hostel_food_item_view_list" model="ir.ui.view">
        <field name="name">educational.hostel.food.item.list</field>
        <field name="model">education.hostel.food.item</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

        <!-- Action -->
        <record id="action_education_hostel_food_item"
            model="ir.actions.act_window">
       <field name="name">Food Items</field>
        <field name="res_model">education.hostel.food.item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Food Item.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_education_hostel_food_item"
              parent="menu_hostel_configuration"
              name="Food"
              action="action_education_hostel_food_item"
              sequence="40"/>
</odoo>
