<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_education_hostel_application_form" model="ir.ui.view">
        <field name="name">education.hostel.application.form</field>
        <field name="model">education.hostel.application</field>
        <field name="arch" type="xml">
            <form string="Hostel Application">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"
                           options="{'preview_image': 'photo'}"/>
                    <group>
                        <h1 class="oe_title" style="font-size:40px;">
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </group>

                    <!--                    <h1>-->
                    <!--                        <field name="name" placeholder="Name"/>-->
                    <!--                    </h1>-->
                    <!--                     <field name="photo" widget="image" class="oe_avatar"-->
                    <!--                           options="{'preview_image': 'photo'}"/>-->
                    <group>
                        <group>
                            <field name="program_id"/>
                            <field name="class_id"/>
                            <field name="student_id"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options="{'no_open': True, 'no_quick_create': True}"
                                       context="{'default_country_id': country_id}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Allocation Details">
                            <field name="allocation_detail_ids">
                                <list string="Allocation Details"
                                      editable="bottom">
                                    <field name="room_id" domain="[('vacancy', '>', 0)]"/>
                                    <field name="hostel_id"/>
                                    <field name="allocated_date"/>
                                    <field name="vacated_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group string="Personal Info">
                                    <field name="id_no"/>
                                    <field name="dob"/>
                                    <field name="blood_group"/>
                                    <field name="emergency_phone"/>
                                    <field name="guardian"/>
                                    <field name="relation"/>
                                </group>
                                <group string="Parents Info">
                                    <field name="father_name"/>
                                    <field name="mother_name"/>
                                    <field name="contact_no"/>
                                    <field name="contact_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Note">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_education_hostel_application_tree" model="ir.ui.view">
        <field name="name">education.hostel.application.tree</field>
        <field name="model">education.hostel.application</field>
        <field name="arch" type="xml">
            <list string="Hostel Applications">
                <!--                <field name="name"/>-->
                <field name="admission_no"/>
                <field name="student_id"/>
                <field name="program_id"/>
                <field name="class_id"/>
                <field name="gender"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <!-- Allocation List View -->
    <record id="view_education_hostel_room_allocation_list" model="ir.ui.view">
        <field name="name">education.hostel.room.allocation.list</field>
        <field name="model">education.hostel.room.allocation</field>
        <field name="arch" type="xml">
            <list string="Hostel Applications">
                <field name="room_id"/>
                <field name="allocated_date"/>
                <field name="vacated_date"/>
            </list>
        </field>
    </record>
    <!--Action for the model-->
    <record model="ir.actions.act_window" id="education_hostel_application_action">
        <field name="name">Hostel Application</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">education.hostel.application</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Hostel Application.
            </p>
        </field>
    </record>
    <menuitem id="menu_education_hostel_application"
              parent="menu_hostel"
              name="Application Form"
              action="education_hostel_application_action"
              sequence="30"/>


</odoo>