<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_vehicle_details">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align:left;">Vehicle Report</h3>
                    <table class="table table-bordered"
                           style="text-align:center; width:100%; font-size:13px;">
                        <thead>
                            <tr style="background-color:#f0f0f0;">
                                <th>Vehicle No</th>
                                <th>Total Capacity</th>
                                <th>Students</th>
                                <th>Available</th>
                                <th>Occupancy %</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="docs">
                                <t t-foreach="docs" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line['vehicle_no']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['total_capacity']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['assigned_students']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['available_seats']"/>
                                        </td>
                                        <td>
                                            <t t-esc="'%.2f' % line['occupancy_percentage']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-else="">
                                <tr>
                                    <td colspan="5" style="text-align:center;">
                                        No records found
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>


                </div>
            </t>
        </t>
    </template>
</odoo>

