<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_transport_details">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align:left;">Transport Report</h3>
                     <table class="table table-sm text-center"
                           style="width:100%; border-collapse:collapse;"
                           border="1">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Route</th>
                                <th>Stop</th>
                                <th>Pickup Time</th>
                                <th>Drop Time</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="docs" t-as="rec">
                                <tr>
                                    <td>
                                        <t t-esc="rec.get('student_name')"/>
                                    </td>
                                    <td>
                                        <t t-esc="rec.get('route_name')"/>
                                    </td>
                                    <td>
                                        <t t-esc="rec.get('stop_name')"/>
                                    </td>
                                    <td>
                                        <t t-esc="rec.get('pickup_time')"/>
                                    </td>
                                    <td>
                                        <t t-esc="rec.get('drop_time')"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>

