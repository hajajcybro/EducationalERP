<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_transport_report_wizard_form" model="ir.ui.view">
        <field name="name">transport.report.wizard.form</field>
        <field name="model">transport.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Transport Reports">
                <group>
                    <field name="report_type"/>
                    <field name="route_id" invisible ="report_type != 'route'"/>
                    <field name="vehicle_id" invisible ="report_type != 'vehicle'"/>
                </group>
                <footer>
                    <button name="action_print_report"
                            string="PDF"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_generate_leave_xl_report"
                            string="XLSX"
                            type="object"
                            class="btn-primary"/>

                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

      <record id="action_transport_report_wizard" model="ir.actions.act_window">
        <field name="name">Transport Reports</field>
        <field name="res_model">transport.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
