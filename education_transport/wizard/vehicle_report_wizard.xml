<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_transport_vehicle_wizard_form" model="ir.ui.view">
        <field name="name">transport.vehicle.wizard.form</field>
        <field name="model">transport.vehicle.wizard</field>
        <field name="arch" type="xml">
            <form string="Vehicle Occupancy Report">
                <group>
                    <field name="vehicle_ids" widget="many2many_tags"/>
                    <field name="report_type"/>
                </group>

                <footer>
                    <button name="action_pdf_print"
                            string="Print PDF"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_transport_vehicle_wizard" model="ir.actions.act_window">
    <field name="name">Vehicle Occupancy Report</field>
    <field name="res_model">transport.vehicle.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>


</odoo>
