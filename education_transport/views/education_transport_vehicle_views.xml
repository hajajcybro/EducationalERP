<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree/List View -->
    <record id="view_edu_transport_vehicle_tree" model="ir.ui.view">
        <field name="name">education.transport.vehicle.tree</field>
        <field name="model">education.transport.vehicle</field>
        <field name="arch" type="xml">
            <list>
                <field name="reg_no"/>
                <field name="capacity"/>
                <field name="driver_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_edu_transport_vehicle_form" model="ir.ui.view">
        <field name="name">education.transport.vehicle.form</field>
        <field name="model">education.transport.vehicle</field>
        <field name="arch" type="xml">
            <form string="Transport Vehicle">
                <sheet>
                    <group>
                        <field name="reg_no"/>
                        <field name="capacity"/>
                        <field name="driver_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_transport_vehicle" model="ir.actions.act_window">
        <field name="name">Transport Vehicles</field>
        <field name="res_model">education.transport.vehicle</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
