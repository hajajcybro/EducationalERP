<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree/List View -->
    <record id="view_edu_transport_route_tree" model="ir.ui.view">
        <field name="name">education.transport.route.tree</field>
        <field name="model">education.transport.route</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_edu_transport_route_form" model="ir.ui.view">
        <field name="name">education.transport.route.form</field>
        <field name="model">education.transport.route</field>
        <field name="arch" type="xml">
            <form string="Transport Route">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="vehicle_id"/>
                        <field name="active"/>
                    </group>

<!--                    <notebook>-->
<!--                        <page string="Route Stops">-->
<!--                            <field name="stops">-->
<!--                                <list editable="bottom">-->
<!--                                    <field name="stop_name"/>-->
<!--                                    <field name="sequence"/>-->
<!--                                    <field name="pickup_time"/>-->
<!--                                    <field name="drop_time"/>-->
<!--                                </list>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->

                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_transport_route" model="ir.actions.act_window">
        <field name="name">Transport Routes</field>
        <field name="res_model">education.transport.route</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
