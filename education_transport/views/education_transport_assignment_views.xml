<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_education_transport_assignment_tree" model="ir.ui.view">
        <field name="name">education.transport.assignment.tree</field>
        <field name="model">education.transport.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="route_id"/>
                <field name="stop_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_education_transport_assignment_form" model="ir.ui.view">
        <field name="name">education.transport.assignment.form</field>
        <field name="model">education.transport.assignment</field>
        <field name="arch" type="xml">
            <form string="Transport Assignment">
                <sheet>
                        <field name="image" widget="image" class="oe_avatar" alt="Avatar"/>
                    <group>
                        <field name="student_id"/>
                        <field name="route_id"/>
                        <field name="stop_id" domain="[('route_id', '=', route_id)]"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>

        </field>
    </record>

    <!-- Action -->
    <record id="action_education_transport_assignment" model="ir.actions.act_window">
        <field name="name">Transport Assignments</field>
        <field name="res_model">education.transport.assignment</field>
        <field name="view_mode">list,form</field>
    </record>



</odoo>
