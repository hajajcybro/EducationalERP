<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_edu_transport_stop_tree" model="ir.ui.view">
        <field name="name">education.transport.stop.tree</field>
        <field name="model">education.transport.stop</field>
        <field name="arch" type="xml">
            <list>
                <field name="stop_name"/>
                <field name="route_id"/>
                <field name="sequence"/>
                <field name="pickup_time"/>
                <field name="drop_time"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_edu_transport_stop_form" model="ir.ui.view">
        <field name="name">education.transport.stop.form</field>
        <field name="model">education.transport.stop</field>
        <field name="arch" type="xml">
            <form string="Route Stop">
                <sheet>
                    <group>
                        <field name="stop_name"/>
                        <field name="route_id"/>
                        <field name="sequence"/>
                        <field name="pickup_time"/>
                        <field name="drop_time"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_transport_stop" model="ir.actions.act_window">
        <field name="name">Transport Stops</field>
        <field name="res_model">education.transport.stop</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
