<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit Education Document Form -->
    <record id="education_document_form_inherit_extended" model="ir.ui.view">
        <field name="name">education.document.form.inherit.extended</field>
        <field name="model">education.document</field>
        <field name="inherit_id" ref="education_core.view_education_document_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='admission_no']" position="after">
                <field name="faculty_id"/>
                <field name="program_id"/>
            </xpath>
             <xpath expr="//field[@name='issue_date']" position="after">
                 <field name="uploaded_by" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_education_document_extended" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">education.document</field>
        <field name="view_mode">list,form</field><field name="help" type="html">
            <p class="0_view_no_content_smiling_face">create</p>
        </field>

    </record>

</odoo>
