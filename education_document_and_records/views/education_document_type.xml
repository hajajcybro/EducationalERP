<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit Education Document type Form -->
    <record id="education_document_type_form_inherit" model="ir.ui.view">
        <field name="name">education.document.form.type.inherit</field>
        <field name="model">education.document.type</field>
        <field name="inherit_id" ref="education_core.document_document_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="is_mandatory"/>
                    <field name="is_expirable"/>
                    <field name="expiry_mode" invisible="is_expirable != True"/>
                    <field name="validity_days" invisible="expiry_mode != 'duration'"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_education_document_type_extended" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">education.document.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="0_view_no_content_smiling_face">create</p>
        </field>

    </record>

</odoo>
