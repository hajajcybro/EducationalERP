<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_document_details">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 style="text-align:left;">Document Report</h3>

                    <table class="table table-sm table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="text-center">Student</th>
                                <th class="text-center">Document Type</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Version</th>
                                <th class="text-center">Issue Date</th>
                                <th class="text-center">Expiry Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="docs" t-as="row">
                                <tr>
                                    <td>
                                        <t t-esc="row['student_name']"/>
                                    </td>
                                    <td>
                                        <t t-esc="row['document_type']"/>
                                    </td>
                                    <td>
                                        <t t-esc="row['document_status']"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="row['version'] or '-'"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="row['issue_date'] or '-'"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="row['expiry_date'] or '-'"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>

