<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="ir_cron_check_mandatory_documents" model="ir.cron">
        <field name="name">Check Mandatory Documents</field>
        <field name="model_id" ref="education_document_and_records.model_education_document"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_mandatory_documents()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
    </record>

    <record id="cron_doc_expiry_2day_warning" model="ir.cron">
        <field name="name">Document Expiry Warning (2 Days Before)</field>
        <field name="model_id" ref="model_education_document"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_document_expiry()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
    </record>


</odoo>
