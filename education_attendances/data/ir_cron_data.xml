<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="cron_auto_recalculate_summary" model="ir.cron">
        <field name="name">Auto Recalculate Attendance Summary</field>
        <field name="model_id" ref="model_education_attendance_summary"/>
        <field name="state">code</field>
        <field name="code">model.action_recalculate_all()</field>

        <!-- Run every day -->
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
