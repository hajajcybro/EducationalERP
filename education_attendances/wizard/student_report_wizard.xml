<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_attendance_wizard_report_form" model="ir.ui.view">
        <field name="name">attendance.report.wizard.form</field>
        <field name="model">attendance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Student Report Wizard" class="oe_form_dialog">
                <sheet>
                    <group>
                        <field name="choice"/>
                    </group>
                    <group string="Filters">
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="class_id"/>
                        <field name="program_id"/>
                    </group>

                     <group>
                         <field name="based_on"/>
                         <field name="date_from"/>
                         <field name="date_to"/>
                    </group>

                    <footer>
                        <button name="action_generate_pdf"
                                type="object" string="PDF"
                                class="btn-primary"/>
                        <button name="action_generate_xl_report"
                                string="XLSX" type="object"
                                class="btn-primary"/>
                        <button special="cancel"
                                string="Cancel" class="btn-secondary"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_report_wizard" model="ir.actions.act_window">
    <field name="name">Attendance Report Wizard</field>
    <field name="res_model">attendance.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="view_attendance_wizard_report_form"/>
</record>

</odoo>
