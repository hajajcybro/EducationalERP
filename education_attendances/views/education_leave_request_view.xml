<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Leave Request Form -->
    <record id="view_edu_leave_request_form" model="ir.ui.view">
        <field name="name">education.leave.request.form</field>
        <field name="model">education.leave.request</field>
        <field name="arch" type="xml">
            <form string="Leave Request">
                    <header>
                        <button name="action_submit" string="Request" type="object"  class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_cancel" string="Cancel" type="object"  class="btn btn-danger" invisible="status != 'submitted'"/>
                        <button name="action_approve" string="Approve" type="object"  class="btn btn-success" invisible="status != 'submitted'"/>
                        <button name="action_reject" string="Reject" type="object"  class="btn btn-warning" invisible="status != 'submitted'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                <sheet>
                    <group>
                        <group>
                            <field name="applicant_id"/>
                            <field name="leave_format"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="start_date" invisible="leave_format == 'half_day'"/>
                            <field name="end_date"/>
                            <field name="total_leave_days"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Leave Request Tree -->
    <record id="view_edu_leave_request_tree" model="ir.ui.view">
        <field name="name">education.leave.request.list</field>
        <field name="model">education.leave.request</field>
        <field name="arch" type="xml">
            <list string="Leave Requests">
                <field name="applicant_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_leave_request" model="ir.actions.act_window">
        <field name="name">Leave Requests</field>
        <field name="res_model">education.leave.request</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
