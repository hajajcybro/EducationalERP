<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Leave Request Form -->
    <record id="view_edu_leave_request_form" model="ir.ui.view">
        <field name="name">education.leave.request.form</field>
        <field name="model">education.leave.request</field>
        <field name="arch" type="xml">
            <form string="Leave Request">
                    <header>
                        <button name="action_submit" string="Request" type="object"  class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_cancel" string="Cancel" type="object"  class="oe_highlight" invisible="status != 'to_approve'" statusbar_visible="cancelled"/>
                        <button name="action_approve" string="Approve" type="object"  class="oe_highlight" invisible="status != 'to_approve'"
                                groups="base.group_system,education_core.group_education_admin,education_core.group_education_admission_officer"/>
                        <button name="action_reject" string="Reject" type="object"  class="oe_highlight" invisible="status != 'to_approve'"  statusbar_visible="rejected"
                                groups="base.group_system,education_core.group_education_admin,education_core.group_education_admission_officer"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                    </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="leave_format"/>
                            <field name="teacher_id"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="start_date" invisible="leave_format == 'half_day'"/>
                            <field name="end_date"/>
                            <field name="total_leave_days"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Submit" type="object" name="action_submit" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Leave Request Tree -->
    <record id="view_edu_leave_request_tree" model="ir.ui.view">
        <field name="name">education.leave.request.list</field>
        <field name="model">education.leave.request</field>
        <field name="arch" type="xml">
            <list string="Leave Requests">
                <field name="student_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Leave Request calendar -->
    <record id="view_edu_leave_request_calendar" model="ir.ui.view">
    <field name="name">education.leave.request.calendar</field>
    <field name="model">education.leave.request</field>
    <field name="arch" type="xml">
        <calendar string="Leave Calendar"
                  date_start="start_date"
                  date_stop="end_date"
                  color="student_id">
            <field name="student_id"/>
            <field name="teacher_id"/>
            <field name="leave_format"/>
            <field name="reason"/>
        </calendar>
    </field>
</record>


    <!-- Action -->
    <record id="action_education_leave_request" model="ir.actions.act_window">
        <field name="name">Leave Requests</field>
        <field name="res_model">education.leave.request</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{'default_view': 'month'}</field>
    </record>
</odoo>
