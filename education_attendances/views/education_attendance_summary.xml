<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_education_attendance_summary_tree"
            model="ir.ui.view">
        <field name="name">education.attendance.summary.tree</field>
        <field name="model">education.attendance.summary</field>
        <field name="arch" type="xml">
            <list string="Attendance Summary">
                <field name="student_id"/>
                <field name="summary_type"/>
                <field name="academic_year_id"/>
                <field name="program_id"/>
                <field name="class_id"/>
                <field name="subject_id"/>
                <field name="date"/>
                <field name="month"/>
                <field name="year"/>
                <field name="total_hours_attended"/>
                <field name="required_credit_hours"/>
                <field name="total_present"/>
                <field name="total_absent"/>
                <field name="total_leave"/>
                <field name="total_late"/>
                <field name="attendance_percentage"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW-->
    <record id="view_education_attendance_summary_trans_form"
            model="ir.ui.view">
        <field name="name">education.attendance.summary.form</field>
        <field name="model">education.attendance.summary</field>
        <field name="arch" type="xml">
            <form string="Attendance Summary">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="summary_type"/>
                    </group>

                    <group>
                        <field name="academic_year_id"/>
                        <field name="program_id"/>
                        <field name="class_id"/>
                        <field name="subject_id"/>
                    </group>

                    <group>
                        <field name="total_hours_attended"/>
                        <field name="required_credit_hours"/>
                    </group>


                    <group>
                        <field name="date" invisible=" summary_type != 'date'"/>
                        <field name="month" invisible=" summary_type != 'month'"/>
                        <field name="year" invisible=" summary_type != 'year'"/>
                        <field name="date_from" widget="daterange" options="{'end_date_field': 'date_to'}"
                               invisible=" summary_type != 'custom'"/>
                        <field name="date_to" invisible="1"/>
                    </group>

                    <group>
                        <field name="total_present"/>
                        <field name="total_absent"/>
                        <field name="total_leave"/>
                        <field name="total_late"/>
                        <field name="attendance_percentage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="action_attendance_summary_trans"
            model="ir.actions.act_window">
        <field name="name">Attendance Summary</field>
        <field name="res_model">education.attendance.summary</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_education_attendance_summary_trans_form"/>
        <field name="target">current</field>
    </record>

</odoo>
