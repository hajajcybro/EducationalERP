<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list View -->
    <record id="view_education_attendance_summary_tree" model="ir.ui.view">
        <field name="name">education.attendance.summary.tree</field>
        <field name="model">education.attendance.summary</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="summary_type"/>
                <field name="date"/>
                <field name="month"/>
                <field name="year"/>
                <field name="subject_id"/>
                <field name="total_present"/>
                <field name="total_absent"/>
                <field name="total_leave"/>
                <field name="attendance_percentage"/>
                <field name="class_id"/>
            </list>
        </field>
    </record>


     <!-- Form View -->
    <record id="view_education_attendance_summary_form" model="ir.ui.view">
        <field name="name">education.attendance.summary.form</field>
        <field name="model">education.attendance.summary</field>
        <field name="arch" type="xml">
            <form string="Attendance Summary">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="summary_type"/>
                        <field name="date"/>
                        <field name="month"/>
                        <field name="year"/>
                        <field name="subject_id"/>
                    </group>

                    <group string="Counts">
                        <field name="total_present"/>
                        <field name="total_absent"/>
                        <field name="total_leave"/>
                        <field name="attendance_percentage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_summary" model="ir.actions.act_window">
        <field name="name">Attendance Summary</field>
        <field name="res_model">education.attendance.summary</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': ['program_id', 'class_id']}</field>
    </record>

</odoo>
