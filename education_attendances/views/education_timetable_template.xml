<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Main Tree/List View -->
    <record id="view_education_timetable_template_tree" model="ir.ui.view">
        <field name="name">education.timetable.template.tree</field>
        <field name="model">education.timetable.template</field>
        <field name="arch" type="xml">
            <list string="Timetable Templates">
                <field name="name"/>
                <field name="class_id"/>
            </list>
        </field>
    </record>

    <!-- Main Form View -->
    <record id="view_education_timetable_template_form" model="ir.ui.view">
        <field name="name">education.timetable.template.form</field>
        <field name="model">education.timetable.template</field>
        <field name="arch" type="xml">
            <form string="Timetable Template">
                 <header>
                    <button name="action_generate_slots"
                            string="Generate Slots"
                            type="object"
                            class="btn-primary"
                            icon="fa-calendar-plus-o"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="class_id"/>
                        <field name="start_date" widget="float_time"/>
                        <field name="end_date"  widget="float_time"/>
                        <field name="line_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_timetable_template" model="ir.actions.act_window">
        <field name="name">Timetable Templates</field>
        <field name="res_model">education.timetable.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first weekly timetable template
            </p>
        </field>
    </record>

</odoo>
