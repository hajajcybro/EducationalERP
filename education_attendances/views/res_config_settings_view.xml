<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Action to open Settings wizard filtered to your module -->
    <record id="action_edu_attendance_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'module': 'education_attendances'}</field>
    </record>

    <!-- Inherit root form (the only real XML node in your system) -->
    <record id="view_res_config_settings_edu_attendance" model="ir.ui.view">
        <field name="name">res.config.settings.edu.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>

        <field name="arch" type="xml">

           <xpath expr="//form" position="inside">
                 <div class="o_settings_section">
                    <h2>Education Attendance</h2>
                </div>

                 <div class="app_settings_block">
                    <div class="row mt16 o_settings_container">
                        <!-- Left Column -->
                        <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <span class="o_icon o_icon_attendance"></span>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="attendance_summary_enabled"/>
                                    <label for="attendance_summary_enabled"/>
                                    <div class="text-muted">
                                        Select summary mode.
                                    </div>
                                    <div class="mt8">
                                        <field name="attendance_summary_mode"/>
                                    </div>
                                </div>
                            </div>

                        <!-- Right Column -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <span class="o_icon o_icon_attendance"></span>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="count_excused_as_present"/>
                                <label for="count_excused_as_present"/>
                                <div class="text-muted">
                                    Excused as Present.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>