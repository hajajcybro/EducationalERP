<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Timetable Slot Form -->
    <record id="view_edu_timetable_slot_form" model="ir.ui.view">
        <field name="name">education.timetable.slot.form</field>
        <field name="model">education.timetable.slot</field>
        <field name="arch" type="xml">
            <form string="Timetable Slot">
                <header>
                    <button name="action_done" string="Completed" type="object"  class="oe_highlight"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="template_id"/>
                            <field name="faculty_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                             <field name="start_time"/>
                             <field name="end_time"/>

                        </group>
                    </group>
                     <notebook>
                        <page string="Attendance">
                            <field name="attendance_line_ids">
                                <list editable="bottom">
                                    <field name="student_id"/>
                                    <field name="roll_no"/>
                                    <field name="present"/>
                                </list>
                            </field>
                        </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Timetable Slot list -->
    <record id="view_edu_timetable_slot_list" model="ir.ui.view">
        <field name="name">education.timetable.slot.list</field>
        <field name="model">education.timetable.slot</field>
        <field name="arch" type="xml">
            <list string="Timetable Slots">
                <field name="template_id"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_timetable_slot" model="ir.actions.act_window">
        <field name="name">Timetable Slots</field>
        <field name="res_model">education.timetable.slot</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
