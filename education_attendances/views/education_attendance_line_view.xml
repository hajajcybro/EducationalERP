<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Attendance Line Tree View -->
    <record id="view_education_attendance_line_list" model="ir.ui.view">
        <field name="name">education.attendance.line.list</field>
        <field name="model">education.attendance.line</field>
        <field name="arch" type="xml">
            <list string="Attendance Lines">
                <field name="student_id"/>
                <field name="status"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <!-- Attendance Line Form View -->
    <record id="view_education_attendance_line_form" model="ir.ui.view">
        <field name="name">education.attendance.line.form</field>
        <field name="model">education.attendance.line</field>
        <field name="arch" type="xml">
            <form string="Attendance Line">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="status"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_attendance_line" model="ir.actions.act_window">
        <field name="name">Attendance Lines</field>
        <field name="res_model">education.attendance.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': ['attendance_id']}</field>
    </record>

</odoo>
