<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Attendance Line Tree View -->
    <record id="view_education_attendance_line_list" model="ir.ui.view">
        <field name="name">education.attendance.line.list</field>
        <field name="model">education.attendance.line</field>
        <field name="arch" type="xml">
            <list string="Attendance Lines">
                <field name="student_id"/>
                <field name="status"/>
                <field name="remarks"/>

            </list>
        </field>
    </record>

    <!-- Attendance Line Form View -->
    <record id="view_education_attendance_line_form" model="ir.ui.view">
        <field name="name">education.attendance.line.form</field>
        <field name="model">education.attendance.line</field>
        <field name="arch" type="xml">
            <form string="Attendance Line">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="status"/>
                        <field name="remarks"/>
                        <field name="late_minutes" invisible="status !='late'"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

<!--    search view-->
    <record id="education_attendance_line_search_view" model="ir.ui.view">
        <field name="name">education.attendance.line.search</field>
        <field name="model">education.attendance.line</field>
        <field name="arch" type="xml">
            <search string="Search Attendance Lines">

                <!-- Quick Search Fields -->
                <field name="student_id"/>
                <field name="attendance_id"/>
                <field name="status"/>
                <separator/>

                <!-- Filters -->
                <filter name="filter_leave"
                        string="Leave"
                        domain="[('status','=','leave')]"/>
                <separator/>

                <!--        GROUP BY          -->
                <group name="group_by">
                    <filter name="group_by_student"
                            string="Student"
                            context="{'group_by':'student_id'}"/>

                    <filter name="group_by_status"
                            string="Status"
                            context="{'group_by':'status'}"/>

                    <filter name="group_by_attendance"
                            string="Attendance"
                            context="{'group_by':'attendance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_education_attendance_line" model="ir.actions.act_window">
        <field name="name">Attendance Lines</field>
        <field name="res_model">education.attendance.line</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_attendance_line_search_view"/>
        <field name="context">{'group_by': ['attendance_id']}</field>
    </record>

</odoo>
