<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_education_attendance_tree" model="ir.ui.view">
        <field name="name">education.attendance.tree</field>
        <field name="model">education.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="class_id"/>
                <field name="program_id"/>
                <field name="date"/>
                <field name="faculty_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_education_attendance_form" model="ir.ui.view">
        <field name="name">education.attendance.form</field>
        <field name="model">education.attendance</field>
        <field name="arch" type="xml">
            <form string="Student Attendance">
                <header>
                    <button name="action_load_students" string="Load Students"
                            type="object" class="btn-secondary"
                            invisible="state != 'draft'"/>
                    <button name="action_submit" string="Submit" type="object"
                            class="btn-primary" invisible = "state != 'marking' "/>
                    <button name="action_validate" string="Validate" type="object"
                            class="btn-success"
                           invisible = "state != 'submitted'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,marking,submitted"/>
                </header>
                <sheet>

                    <group>
                        <field name="class_id"/>
                        <field name="program_id"/>
                        <field name="timetable_line_id"  domain="[('class_id', '=', class_id), ('day', '=', weekday)]"/>
                        <field name="date"/>
                        <field name="faculty_id"/>
                    </group>
                    <notebook>
                         <page string="Attendance">
                             <field name="attendance_line_ids">
                                  <list editable="bottom">
                                    <field name="student_id"/>
                                    <field name="status"/>
                                    <field name="remarks"/>
                                </list>
                             </field>
                         </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

<!--    search view-->
    <record id="education_attendance_search_view" model="ir.ui.view">
        <field name="name">education.attendance.search</field>
        <field name="model">education.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Attendance">

                <!-- Quick Search Fields -->
                <field name="class_id"/>
                <field name="program_id"/>
                <field name="faculty_id"/>
                <field name="state"/>
                <field name="timetable_line_id"/>
                <field name="date"/>
                <separator/>

                <!-- group -->
                <group name="group_by">

                    <filter name="group_by_class"
                            string="Class"
                            context="{'group_by':'class_id'}"/>

                    <filter name="group_by_program"
                            string="Program"
                            context="{'group_by':'program_id'}"/>

                    <filter name="group_by_faculty"
                            string="Faculty"
                            context="{'group_by':'faculty_id'}"/>

                    <filter name="group_by_state"
                            string="Status"
                            context="{'group_by':'state'}"/>

                    <filter name="group_by_weekday"
                            string="Day"
                            context="{'group_by':'weekday'}"/>

                    <filter name="group_by_date"
                            string="Date"
                            context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

<!--      Action to open Attendance records -->
    <record id="action_education_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">education.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="education_attendance_search_view"/>
        <field name="help" type="html">
            <p>Manage student attendance per timetable slot.</p>
        </field>
    </record>
</odoo>

