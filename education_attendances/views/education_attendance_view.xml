<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_education_attendance_tree" model="ir.ui.view">
        <field name="name">education.attendance.tree</field>
        <field name="model">education.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="slot_id"/>
                <field name="student_id"/>
                <field name="roll_no"/>
                <field name="present"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_education_attendance_form" model="ir.ui.view">
        <field name="name">education.attendance.form</field>
        <field name="model">education.attendance</field>
        <field name="arch" type="xml">
            <form string="Student Attendance">
                <sheet>
                    <group>
                        <field name="slot_id"/>
                        <field name="student_id"/>
                        <field name="roll_no" readonly="1"/>
                        <field name="present"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--      Action to open Attendance records -->
    <record id="action_education_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">education.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Manage student attendance per timetable slot.</p>
        </field>
    </record>
</odoo>

