<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="student_report_attendance">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                   <h2 style="text-align:center; margin-bottom: 20px;">
                        Attendance Report
                    </h2>

                    <table class="table table-sm" style="width: 100%;" border="1">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Program</th>
                                <th>Status</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="docs" t-as="rec">
                                <tr>
                                    <td><t t-esc="rec['date']"/></td>
                                    <td><t t-esc="rec['student_name']"/></td>
                                    <td><t t-esc="rec['class_name']"/></td>
                                    <td><t t-esc="rec['program_name']"/></td>
                                    <td><t t-esc="rec['status']"/></td>
                                    <td><t t-esc="rec['remarks']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>

